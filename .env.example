# ---------- Authentication (Clerk) ----------
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=
CLERK_WEBHOOK_SECRET=

# ---------- Database (Supabase + Prisma) ----------
DATABASE_URL=

# ---------- Esports Data API ----------
# You will need to sign up for a service like Abios or PandaScore
ESPORTS_API_KEY=

# ---------- Application Settings ----------
NEXT_PUBLIC_APP_URL=
NEXT_PUBLIC_API_URL=

# ---------- ML / Projections ----------
# Directory where model artifacts (joblib) are stored
MODEL_DIR=ml/models
# Default stat type label used when writing projections
PROJECTION_STAT_TYPE=Kills
STATS_CSV_PATH=ml/data/match_stats.csv

# ---------- Schedule Ingestion ----------
# Path to CSV containing upcoming scheduled matches
SCHEDULE_CSV_PATH=ml/data/schedule.csv
# Optional: Only create projections for matches within this many hours (0 = all future)
SCHEDULE_HORIZON_HOURS=0

# ---------- Match Status Transitions ----------
# Minutes before scheduledAt to mark a match LIVE (negative means go live after start)
MATCH_LIVE_LEAD_MINUTES=0
# Minutes after scheduledAt to auto-complete a match
MATCH_AUTOCOMPLETE_MINUTES=90
# If set to 1, allow COMPLETED -> LIVE rollback if schedule changes (normally 0)
MATCH_ALLOW_ROLLBACK=0
